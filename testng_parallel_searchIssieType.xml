<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sample test suite" parallel="tests" thread-count="4">

    <listeners>
        <listener class-name="utils.ListenerTest"/>
    </listeners>

    <parameter name="myParam" value="This is the value for a parameter"/>
    <parameter name="browserName" value="firefox"/>
    <parameter name="local" value="yes"/>
    <parameter name="implicitWaitInSeconds" value="30"/>

    <test name="UI SearchIssueTestByProject">
        <groups>
            <run>
                <include name="UI"/>
                <exclude name="SKIP"/>
            </run>
        </groups>
        <classes>
            <class name="ui.SearchIssueTest">
                <methods>
                    <include name="searchByProject"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="UI SearchIssueTestByType">
        <groups>
            <run>
                <include name="UI"/>
